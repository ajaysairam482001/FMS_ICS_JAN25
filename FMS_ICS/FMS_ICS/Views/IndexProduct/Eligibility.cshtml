@{
    ViewBag.Title = "Eligibility";
}
<style>
    body {
        background: linear-gradient(135deg, #d6bb29, #77aded);
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #fff; /* White border for all rows and cells */
        text-align: center;
        padding: 8px;
    }

    th {
        background-color: #4caf50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:nth-child(odd) {
        background-color: #e8f4fa;
    }

    .terms {
        margin-top: 20px;
        padding: 15px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

        .terms h3 {
            margin-bottom: 10px;
            color: #333;
        }

    .proceed-btn {
        margin-top: 15px;
        display: flex;
        justify-content: center; /* Centers the button horizontally */
        align-items: center;
    }
</style>

<h2>Eligibility</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Minimum Income</th>
            <th>Age Limit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.MinimumIncome</td>
                <td>@product.AgeLimit</td>
            </tr>
        }
    </tbody>
</table>

<div class="terms">
    <h3>Terms and Conditions</h3>
    <ul>
        <li>Applicants must meet the minimum income and age criteria to be eligible for the product.</li>
        <li>Eligibility does not guarantee approval of the application; additional checks may apply.</li>
        <li>By proceeding, you agree to comply with all terms and conditions stated by the bank.</li>
    </ul>
    <div class="proceed-btn">
        @Html.ActionLink("I Agree", "Index", "Login", null, new { @class = "btn btn-primary" })
    </div>
</div>
