@model FMS_ICS.Models.DocumentVerification

<h2>Submit Document for Verification</h2>

@using (Html.BeginForm("UserPost", "DocumentVerification", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(model => model.UserID, "UserId")
        @Html.TextBoxFor(model => model.UserID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DocumentLink, "Document Link")
        @Html.TextBoxFor(model => model.DocumentLink, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Remarks, "Remarks")
        @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
    </div>

    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="success text-success">
            @ViewBag.Message
        </div>
    }


    <button type="submit" class="btn btn-primary">Submit</button>
}
