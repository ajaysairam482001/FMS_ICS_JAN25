    
@model IEnumerable<FMS_ICS.Models.Product>

@{ ViewBag.Title = "Products"; }

<h2>Product List</h2>
<style>
    body {
        background: linear-gradient(135deg,#d6bb29,#77aded);
    }
</style>

<p>
    @Html.ActionLink("Create New Product", "Create", "Product", new { }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to Dashboard", "Index", "AdminDashboard", new { }, new { @class = "btn btn-primary" })
    <a href="@Url.Action("Logout","Login")" class="btn btn-danger">Log Out</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            @*<th>Product ID</th>*@
            <th>Product Name</th>
            <th>Details</th>
            <th>Price</th>
            <th>Processing Fee</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                @*<td>@product.ProductID</td>*@
                <td>@product.ProductName</td>
                <td>@product.ProductDetails</td>
                <td>@product.Price</td>
                <td>@product.ProcessingFee</td>
                <td><img src="@Url.Content(@product.ImageURL)" alt="@product.ImageURL"style="height: 40px; width: 40px;" /></td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Product", new { id = product.ProductID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", "Product", new { id = product.ProductID }, new { @class = "btn btn-danger" })
                    @*@Html.ActionLink("Buy Now", "BuyNow", "Product", new { id = product.ProductID }, new { @class = "btn btn-primary" })*@
                </td>
            </tr>
        }
    </tbody>
</table>

